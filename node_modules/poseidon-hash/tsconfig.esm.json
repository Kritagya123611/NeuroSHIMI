{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node",
      "jest",
      "@types/jest"
    ]
  },
  "include": [
    "./**/*.ts" // *** The files TypeScript should type check ***
  ],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "**/node_modules",
    "dist",
    "lib",
    "tests"
  ]
}
